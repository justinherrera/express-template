{
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/src",
        "baseUrl": "src",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "controllers/*": ["controllers/*"],
            "models/*": ["models/*"],
            "middlewares/*": ["api/middlewares/*"]
        }
    },
    "include": [
        "src/**/*" // will only compile inside src folder
    ],
    "exclude": ["node_modules", "dist"]
    
}