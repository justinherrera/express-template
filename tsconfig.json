{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/src",
        "baseUrl": "src",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "controllers/*": ["controllers/*"],
            "models/*": ["models/*"],
            "utils/*": ["utils/*"],
            "middlewares/*": ["api/middlewares/*"],
        }
    },
    "ts-node": {
        "transpileOnly": true
    },
    "include": [
        "src/**/*" // will only compile inside src folder
    ],
    "exclude": ["node_modules", "dist"]
    
}